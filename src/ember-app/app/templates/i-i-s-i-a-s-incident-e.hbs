<h3 class="ui header">{{t "forms.i-i-s-i-a-s-incident-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-i-a-s-incident-e.iD-caption")
      data-test-i-i-s-i-a-s-incident-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field" data-test-i-i-s-i-a-s-incident-e-status="true">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.status-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-i-a-s-incident-status")
      value=model.status
      class=(if (v-get validationModel "status" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "status" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.solveBefore-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.solveBefore
      class=(if (v-get validationModel "solveBefore" "isInvalid") "error")
      data-test-i-i-s-i-a-s-incident-e-solveBefore=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "solveBefore" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.caption
      class=(if (v-get validationModel "caption" "isInvalid") "error")
      label=(t "forms.i-i-s-i-a-s-incident-e.caption-caption")
      data-test-i-i-s-i-a-s-incident-e-caption=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "caption" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.description
      class=(if (v-get validationModel "description" "isInvalid") "error")
      label=(t "forms.i-i-s-i-a-s-incident-e.description-caption")
      data-test-i-i-s-i-a-s-incident-e-description=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "description" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.responsible-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.responsible
      displayAttributeName="name"
      autocomplete=true
      relationName="responsible"
      projection="ResponsibleL"
      title=(t "forms.i-i-s-i-a-s-incident-e.responsible-caption")
      readonly=readonly
      componentName="responsibleLookup"
      class=(if (v-get validationModel "responsible" "isInvalid") "error")
      data-test-i-i-s-i-a-s-incident-e-responsible=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "responsible" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.counterParty-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.counterParty
      displayAttributeName="name"
      autocomplete=true
      relationName="counterParty"
      projection="CounterPartyL"
      title=(t "forms.i-i-s-i-a-s-incident-e.counterParty-caption")
      readonly=readonly
      componentName="counterPartyLookup"
      class=(if (v-get validationModel "counterParty" "isInvalid") "error")
      data-test-i-i-s-i-a-s-incident-e-counterParty=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "counterParty" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.category-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.category
      displayAttributeName="name"
      autocomplete=true
      relationName="category"
      projection="CategoryL"
      title=(t "forms.i-i-s-i-a-s-incident-e.category-caption")
      readonly=readonly
      componentName="categoryLookup"
      class=(if (v-get validationModel "category" "isInvalid") "error")
      data-test-i-i-s-i-a-s-incident-e-category=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "category" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-a-s-incident-e.comment-caption"}}</label>
    {{flexberry-groupedit
      componentName="commentGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.comment
      content=model.comment
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "comment" "isInvalid") "error")
      data-test-i-i-s-i-a-s-incident-e-comment=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "comment" "message")}}
  </div>
</form>
